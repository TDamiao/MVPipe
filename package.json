{
  "name": "mv-pipe",
  "productName": "MV Pipe",
  "version": "1.0.3",
  "description": "Oracle Database Load Monitoring Dashboard",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && electron-builder",
    "preview": "vite preview"
  },
  "dependencies": {
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@mui/icons-material": "^5.14.19",
    "@mui/material": "^5.14.20",
    "oracledb": "^6.3.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/oracledb": "^6.0.2",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@vitejs/plugin-react": "^4.2.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "typescript": "^5.2.2",
    "vite": "^5.0.0",
    "vite-plugin-electron": "^0.15.5",
    "vite-plugin-electron-renderer": "^0.14.5"
  },
  "build": {
    "icon": "public/logo.png",
    "win": {
      "icon": "public/logo.ico"
    },
    "nsis": {
      "include": "build/installer.nsh"
    },
    "files": [
      "dist/**",
      "dist-electron/**",
      "package.json",
      "vendor/instantclient/**"
    ],
    "extraResources": [
      {
        "from": "vendor/instantclient",
        "to": "instantclient"
      },
      {
        "from": "vendor/vcredist_x64.exe",
        "to": "vcredist_x64.exe"
      }
    ]
  }
}
